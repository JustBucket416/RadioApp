<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Widget.RadioApp.ShimmerLayout" parent="">
        <item name="shimmer_angle">0</item>
        <item name="shimmer_animation_duration">2500</item>
        <item name="shimmer_auto_start">true</item>
        <item name="shimmer_color">@color/colorGray</item>
    </style>


</resources>